@model EmployeeManager.Web.Models.UpdateEmployeeModel

<script src="~/Scripts/CustomScripts/employee.js" type="text/javascript"></script>

<h2>Update Employee</h2>

<div class="row">
	<div class="col-md-3">
		<label>Search Name</label>
	</div>
	<div class="col-md-7">
		<input id="searchString" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<button class="btn btn-dark" onclick="searchEmployee()">Search</button>
	</div>
</div>

<hr />

<div id="successMessage" class="hidden alert alert-success">
	Successfully Updated!
</div>
<div id="errorMessage" class="hidden alert alert-danger">
	Error Occurred!
</div>

<input id="employeeId" type="hidden"/>
<div class="row">
	<div class="col-md-2">
		<label>First Name:</label>
	</div>
	<div class="col-md-3">
		<input id="firstName" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<label>Department:</label>
	</div>
	<div class="col-md-3">
		<input id="department" type="text" class="form-control" />
	</div>
	</div>
<div class="row">
	<div class="col-md-2">
		<label>Middle Name:</label>
	</div>
	<div class="col-md-3">
		<input id="middleName" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<label>Job Title:</label>
	</div>
	<div class="col-md-3">
		<input id="jobTitle" type="text" class="form-control" />
	</div>
</div>
<div class="row">
	<div class="col-md-2">
		<label>Last Name:</label>
	</div>
	<div class="col-md-3">
		<input id="lastName" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<label>Salary:</label>
	</div>
	<div class="col-md-3">
		<input id="salary" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<select id="recurrence" type="text" class="form-control">
			<option value="x">Salary Type</option>
			<option value="0">ANNUAL</option>
			<option value="1">HOURLY</option>
		</select>
	</div>
</div>
<div class="row">
	<div class="col-md-2">
		<label>Birth Date:</label>
	</div>
	<div class="col-md-3">
		<input id="birthDate" type="text" class="form-control" />
	</div>
	<div class="col-md-2">
		<label>Availability:</label>
	</div>
	<div class="col-md-3">
		<input id="availability" type="text" class="form-control" />
	</div>
</div>
<div class="row">
	<div class="col-md-2">
		<label>Date Hired:</label>
	</div>
	<div class="col-md-3">
		<input id="dateHired" type="text" class="form-control" />
	</div>
</div>
<div class="col-md-12">
	<button class="btn btn-secondary margin-top-md margin-left-md" onclick="updateEmployee()">Save</button>
</div>
