@model EmployeeManager.Web.Models.EmployeeDisplayModel

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Employee Manager</title>
</head>
<body>
	<div class="container">
		<h2>Employees</h2>
		<div class="table-responsive">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>First Name</th>
						<th>Middle Name</th>
						<th>Last Name</th>
						<th>Date Hired</th>
						<th>Birth Date</th>
						<th>Salary</th>
						<th>Recurrence</th>
						<th>Job Title</th>
						<th>Department</th>
						<th>Availability</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var employee in Model.Employees)
					{
						<tr>
							<td>
								@employee.FirstName
							</td>
							<td>
								@employee.MiddleName
							</td>
							<td>
								@employee.LastName
							</td>
							<td>
								@employee.DateHiredString
							</td>
							<td>
								@employee.BirthDateString
							</td>
							<td>
								@employee.SalaryString
							</td>
							<td>
								@employee.RecurrenceString
							</td>
							<td>
								@employee.JobTitle
							</td>
							<td>
								@employee.Department
							</td>
							<td>
								@employee.Availability
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</body>
</html>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>